generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Change to your preferred database
  url      = "file:./dev.db"
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  isAdmin         Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  updatedPassword Boolean  @default(false)

  wishlist        Wishlist?

  matchedSanta    User?    @relation("UserMatchedSanta", fields: [matchedSantaId], references: [id])
  matchedSantaId  Int?     @unique

  matchedBy       User?    @relation("UserMatchedSanta")
  Accepted        Boolean  @default(false)
}


model Wishlist {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        Int       @unique
  pendingAccept Boolean   @default(true)
  items         WishlistItem[]
}

model WishlistItem {
  id         Int       @id @default(autoincrement())
  wishlist   Wishlist  @relation(fields: [wishlistId], references: [id])
  wishlistId Int
  item       String
}

model AdminCode {
  id   Int    @id @default(autoincrement())
  code String @unique
}
